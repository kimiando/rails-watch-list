<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path 'chair.webp' %>) ">
  <div class="title-container">
    <h1>The Movie Vault</h1>
    <%= link_to "Add a new list✍🏻", new_list_path, class: 'add-list-button' %>
  </div>
</div>
<%# card %>
<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
      <h2 class="card-text"><%= link_to list.name, "lists/#{list.id}" %>
        <%= link_to "Delete",
          root_path(@list),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %></h2>
    </div>
  <% end %>
</div>
